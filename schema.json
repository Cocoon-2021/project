{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "basics",
        "work",
        "education",
        "certificates",
        "skills",
        "interests",
        "projects"
    ],
    "properties": {
        "id": {
            "type": "integer"
        },
        "coverLetter": {
            "type": "string"
        },
        "basics": {
            "type": "object",
            "required": [
                "name",
                "email",
                "phone",
                "url",
                "location",
                "profiles"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "image": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^[A-za-z0-9]+@[a-zA-Z]+.[a-zA-Z]{2,3}$"
                },
                "phone": {
                    "type": "string",
                    "minLength":10
                },
                "url": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "location": {
                    "type": "object",
                    "required": [
                        "address",
                        "postalCode",
                        "city",
                        "countryCode",
                        "region"
                    ],
                    "properties": {
                        "address": {
                            "type": "string"
                        },
                        "postalCode": {
                            "type": "string"
                        },
                        "city": {
                            "type": "string"
                        },
                        "countryCode": {
                            "type": "string"
                        },
                        "region": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": true
                },
                "profiles": {
                    "type": "array",
                    "uniqueItems": true,
                    "additionalItems": true,
                    "items": {
                        "anyOf": [
                            {
                                "type": "object",
                                "required": [
                                    "url"
                                ],
                                "properties": {
                                    "network": {
                                        "type": "string"
                                    },
                                    "username": {
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": true
                            }
                        ]
                    }
                }
            },
            "additionalProperties": true
        },
        "work": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "location",
                            "description",
                            "position",
                            "url",
                            "startDate",
                            "endDate"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "position": {
                                "type": "string"
                                
                            },
                            "url": {
                                "type": "string"
                            },
                            "startDate": {
                                "type": "string"
                            },
                            "endDate": {
                                "type": "string"
                            },
                            "summary": {
                                "type": "string"
                            },
                            "highlights": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "keywords": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "volunteer": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "organization",
                            "position",
                            "url",
                            "startDate",
                            "endDate"
                        ],
                        "properties": {
                            "organization": {
                                "type": "string"
                            },
                            "position": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string"
                            },
                            "startDate": {
                                "type": "string"
                            },
                            "endDate": {
                                "type": "string"
                            },
                            "summary": {
                                "type": "string"
                            },
                            "highlights": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "education": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "url",
                            "startDate",
                            "endDate"
                        ],
                        "properties": {
                            "institution": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string"
                            },
                            "area": {
                                "type": "string"
                            },
                            "studyType": {
                                "type": "string"
                            },
                            "startDate": {
                                "type": "string"
                            },
                            "endDate": {
                                "type": "string"
                            },
                            "score": {
                                "type": "string"
                            },
                            "courses": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "awards": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "title",
                            "date"
                        ],
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "date": {
                                "type": "string"
                            },
                            "awarder": {
                                "type": "string"
                            },
                            "summary": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "certificates":{
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "date",
                            "url"
                        ],
                        "properties": {
                            "name":{
                                "type":"string"
                            },
                            "date":{
                                "type":"string"
                            },
                            "url":{
                                "type":"string"
                            },
                            "issuer":{
                                "type":"string"
                            }
                        }
                    }
                ]
            }
        },
        "publications": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "releaseDate",
                            "url"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "publisher": {
                                "type": "string"
                            },
                            "releaseDate": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string"
                            },
                            "summary": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "skills": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "level": {
                                "type": "string"
                            },
                            "keywords": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "languages": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "language": {
                                "type": "string"
                            },
                            "fluency": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "interests": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "keywords": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "references": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "reference": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "projects": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "startDate",
                            "endDate",
                            "url"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "highlights": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "keywords": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "startDate": {
                                "type": "string"
                            },
                            "endDate": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string"
                            },
                            "roles": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "entity": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        }
    },
    "additionalProperties": true
}