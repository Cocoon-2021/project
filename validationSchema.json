{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "basics",
        "work",
        "education",
        "certificates",
        "skills",
        "interests",
        "projects"
    ],
    "properties": {
        "resumeId": {
            "type": "integer"
        },
        "resumeCoverLetter": {
            "type": "string"
        },
        "basics": {
            "type": "object",
            "required": [
                "resumerName",
                "resumerEmail",
                "resumerPhone",
                "resumerUrl",
                "location",
                "profiles"
            ],
            "properties": {
                "resumerName": {
                    "type": "string",
                    "maxLength": 25
                },
                "position": {
                    "type": "string"
                },
                "profilePicture": {
                    "type": "string"
                },
                "resumerEmail": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^[A-za-z0-9]+@[a-zA-Z]+.[a-zA-Z]{2,3}$"
                },
                "resumerPhone": {
                    "type": "string",
                    "pattern": "^[0-9]*$",
                    "minLength":10,
                    "maxLength": 15
                },
                "resumerUrl": {
                    "type": "string"
                },
                "resumerSummary": {
                    "type": "string",
                    "maxLength": 750
                },
                "location": {
                    "type": "object",
                    "required": [
                        "resumerAddress",
                        "resumerPostalCode",
                        "resumerCity",
                        "resumerCountryCode",
                        "resumerRegion"
                    ],
                    "properties": {
                        "resumerAddress": {
                            "type": "string"
                        },
                        "resumerPostalCode": {
                            "type": "string",
                            "maxLength": 10
                        },
                        "resumerCity": {
                            "type": "string"
                        },
                        "resumerCountryCode": {
                            "type": "string",
                            "maxLength": 3
                        },
                        "resumerRegion": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": true
                },
                "profiles": {
                    "type": "array",
                    "uniqueItems": true,
                    "additionalItems": true,
                    "items": {
                        "anyOf": [
                            {
                                "type": "object",
                                "required": [
                                    "profileUrl"
                                ],
                                "properties": {
                                    "profileNetwork": {
                                        "type": "string"
                                    },
                                    "profileUsername": {
                                        "type": "string"
                                    },
                                    "profileUrl": {
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": true
                            }
                        ]
                    }
                }
            },
            "additionalProperties": true
        },
        "work": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "companyName",
                            "companyLocation",
                            "workDescription",
                            "workPosition",
                            "companyUrl",
                            "workStartDate",
                            "workEndDate"
                        ],
                        "properties": {
                            "companyName": {
                                "type": "string"
                            },
                            "companyLocation": {
                                "type": "string"
                            },
                            "workDescription": {
                                "type": "string"
                            },
                            "workPosition": {
                                "type": "string"    
                            },
                            "companyUrl": {
                                "type": "string"
                            },
                            "workStartDate": {
                                "type": "string"
                            },
                            "workEndDate": {
                                "type": "string"
                            },
                            "workSummary": {
                                "type": "string",
                                "maxLength": 750
                            },
                            "workHighlights": {
                                "type": "string"
                                },
                            "workKeywords": {
                                "type": "string"
                            }
                        }
                    }

                ]
            }
        },
        "volunteer": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "volunteeredOrganization",
                            "volunteeredPosition",
                            "organizationUrl",
                            "volunteeringStartDate",
                            "volunteeringEndDate"
                        ],
                        "properties": {
                            "volunteeredOrganization": {
                                "type": "string"
                            },
                            "volunteeredPosition": {
                                "type": "string"
                            },
                            "organizationUrl": {
                                "type": "string"
                            },
                            "volunteeringStartDate": {
                                "type": "string"
                            },
                            "volunteeringEndDate": {
                                "type": "string"
                            },
                            "volunteeringSummary": {
                                "type": "string"
                            },
                            "volunteeringHighlights": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "education": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "institutionUrl",
                            "educationStartDate",
                            "educationEndDate"
                        ],
                        "properties": {
                            "educationInstitution": {
                                "type": "string"
                            },
                            "institutionUrl": {
                                "type": "string"
                            },
                            "educatedArea": {
                                "type": "string"
                            },
                            "educationStudyType": {
                                "type": "string"
                            },
                            "educationStartDate": {
                                "type": "string"
                            },
                            "educationEndDate": {
                                "type": "string"
                            },
                            "educationScore": {
                                "type": "string"
                            },
                            "educatedCourses": {
                                "type": "array",
                                "uniqueItems": true,
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "awards": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "awardTitle",
                            "awardedDate"
                        ],
                        "properties": {
                            "awardTtitle": {
                                "type": "string"
                            },
                            "awardedDate": {
                                "type": "string"
                            },
                            "awarder": {
                                "type": "string"
                            },
                            "awardSummary": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "certificates":{
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "certificateName",
                            "certificateIssueDate",
                            "certificateUrl"
                        ],
                        "properties": {
                            "certificateName":{
                                "type":"string"
                            },
                            "certificateIssueDate":{
                                "type":"string"
                            },
                            "certificateUrl":{
                                "type":"string"
                            },
                            "certificateIssuer":{
                                "type":"string"
                            }
                        }
                    }
                ]
            }
        },
        "publications": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "publicationTitle",
                            "publishedDate",
                            "publishedUrl"
                        ],
                        "properties": {
                            "publicationTitle": {
                                "type": "string"
                            },
                            "publisher": {
                                "type": "string"
                            },
                            "publishedDate": {
                                "type": "string"
                            },
                            "publishedUrl": {
                                "type": "string"
                            },
                            "publicationSummary": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "skills": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "skillName"
                        ],
                        "properties": {
                            "skillsName": {
                                "type": "string"
                            },
                            "skillLevel": {
                                "type": "string"
                            },
                            "skillKeywords": {
                                "type": "string"  
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "languages": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "language": {
                                "type": "string"
                            },
                            "languageFluency": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "interests": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "interestName"
                        ],
                        "properties": {
                            "interestName": {
                                "type": "string"
                            },
                            "interestsKeywords": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "references": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "referrerName"
                        ],
                        "properties": {
                            "referrerName": {
                                "type": "string"
                            },
                            "reference": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "projects": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "projectName",
                            "projectStartDate",
                            "projectEndDate",
                            "projectUrl"
                        ],
                        "properties": {
                            "projectName": {
                                "type": "string"
                            },
                            "projectDescription": {
                                "type": "string"
                            },
                            "projectHighlights": {
                                "type": "string"
                            },
                            "projectKeywords": {
                                "type": "string"
                            },
                            "projectStartDate": {
                                "type": "string"
                            },
                            "projectEndDate": {
                                "type": "string"
                            },
                            "projectUrl": {
                                "type": "string"
                            },
                            "projectRoles": {
                                "type": "string"
                            },
                            "projectEntity": {
                                "type": "string"
                            },
                            "projectType": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        }
    },
    "additionalProperties": true
}